# CoinGecko API Configuration
# Get your API key from: https://www.coingecko.com/en/api/pricing
COIN_GECKO_API_KEY=your_coingecko_api_key_here

# Security Salts (generate random 64-character hex strings)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DEVELOPMENT_SALT=your_development_salt_here
PRODUCTION_SALT=your_production_salt_here

# Dedicated RPC Endpoints (Chainstack or similar provider)
# BSC (Binance Smart Chain) Mainnet RPC
BSC_RPC_URL=https://your-bsc-rpc-url-here

# Solana Mainnet RPC
SOLANA_RPC_URL=https://your-solana-rpc-url-here

# Bitcoin Mainnet RPC
BITCOIN_RPC_URL=https://your-bitcoin-rpc-url-here

# Ethereum Mainnet RPC
ETHEREUM_RPC_URL=https://your-ethereum-rpc-url-here

# Tap-to-Pay Configuration
# Predefined PIN for auto-generated Tap-to-Pay wallet (6 digits recommended)
TAP_TO_PAY_PIN=123456
